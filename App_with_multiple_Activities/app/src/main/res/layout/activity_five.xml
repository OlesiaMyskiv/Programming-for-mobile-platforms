<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityFive">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Чи часто ви відчуваєте, що ваша творчість залежить від настрою?"
            android:textSize="24sp"
            android:textColor="@color/text_color"/>

        <Button
            android:id="@+id/btn_one"
            style="@style/PinkButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:onClick="addPointA"
            android:text="Ні, я можу створювати за графіком" />

        <Button
            android:id="@+id/btn_two"
            style="@style/PinkButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:onClick="addPointB"
            android:text="Іноді, але можу себе змусити" />

        <Button
            android:id="@+id/btn_three"
            style="@style/PinkButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:onClick="addPointC"
            android:text="Так, мій настрій – це головний критерій" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="20sp"
            android:textColor="@color/text_color"
            android:text=""/>

        <TextView
            android:id="@+id/txt_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:background="@color/result_background"
            android:text="Тут буде Ваш результат тесту"
            android:textSize="20sp"
            android:padding="8dp"
            android:textStyle="bold"
            android:textColor="@color/text_color"/>
    </LinearLayout>

    <Button
        style="@style/PinkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:text="Отримати фінальний результат"
        android:onClick="finished"/>
</RelativeLayout>